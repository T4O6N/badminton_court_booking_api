generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum courtNum {
  A1
  B1
  C1
  D1
  E1
  F1
  G1
  H1
  I1
  J1
}

model Court {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  court_number   courtNum
  court_price    Int
  date_of_court  String
  description    String
  start_time     String
  end_time       String
  available      Boolean       @default(true)
  created_at     DateTime      @default(now())
  updated_at     DateTime      @updatedAt
  courtBooking   courtBooking? @relation(fields: [courtBookingId], references: [id])
  courtBookingId String?       @db.ObjectId

  @@map("courts")
}

model courtBooking {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  phone        String
  first_name   String
  last_name    String
  email        String
  limitDay     Int
  court        Court[]
  date_of_book DateTime @default(now()) @map("date_of_book")
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  booked_by    String

  @@map("courtBookings")
}

model courtBookingHistory {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Promotion {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  expireIn String

  @@map("promotions")
}

model Staff {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  is_block   Boolean  @default(false)
  is_active  Boolean  @default(true)
  phone      String
  full_name  String
  last_name  String
  email      String
  username   String
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("staffs")
}
