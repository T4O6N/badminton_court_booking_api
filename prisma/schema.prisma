generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum courtNum {
  A1
  B1
  C1
  D1
  E1
  F1
  G1
  H1
  I1
  J1
}

model Court {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  is_block       Boolean       @default(false)
  is_active      Boolean       @default(true)
  is_update_info Boolean       @default(true)
  court_number   courtNum
  court_price    String
  date_of_court  String
  description    String
  start_time     String
  end_time       String
  available      Boolean       @default(true)
  create_at      DateTime      @default(now())
  update_at      DateTime      @updatedAt
  courtBooking   courtBooking?

  @@map("courts")
}

model courtBooking {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  is_block   Boolean  @default(false)
  is_active  Boolean  @default(true)
  phone      String
  first_name String
  last_name  String
  email      String
  courtId    String   @unique @db.ObjectId
  create_at  DateTime @default(now())
  update_at  DateTime @updatedAt
  court      Court?   @relation(fields: [courtId], references: [id])

  @@map("courtBookings")
}

model Staff {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  is_block  Boolean? @default(false)
  is_active Boolean? @default(false)
  full_name String?
  last_name String?
  email     String?
  username  String?
  phone     String?
  password  String?
  create_at DateTime @default(now())
  update_at DateTime @updatedAt

  @@map("staffs")
}

model Promotion {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  expireIn String

  @@map("promotions")
}
